<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".About">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rel_layout"
                >
                <RelativeLayout
                    android:layout_width="50dp"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/ppofile_logout_btn"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_height="50dp">
                    <ImageView

                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/logout"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/ppofile_logout_btn"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/oo1"
                    >
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="120dp"
                        android:layout_height="90sp"
                        android:src="@drawable/shivendumishraimg"
                        android:elevation="4dp"
                        app:civ_border_color="#FF5125"
                        android:scaleType="centerCrop"
                        android:layout_centerHorizontal="true"
                        app:civ_border_width="2dp"

                        android:id="@+id/circular_acc_dp"
                        />
                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:text="Shivendu Mishra"
                        android:layout_marginTop="10dp"
                        android:gravity="center_horizontal"
                        android:textSize="25sp"
                        android:layout_below="@+id/circular_acc_dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/cantora_one"
                        android:id="@+id/profile_name"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Android Developer Koltin"
                        android:layout_gravity="center"
                        android:layout_below="@+id/profile_name"
                        android:layout_centerInParent="true"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="normal"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:id="@+id/profile_email"
                        />


                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/oo1"
                    android:orientation="horizontal"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/oo2"
                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:id="@+id/me_btn"
                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/redshape"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/cantora_one"
                                android:text="Me"
                                android:textColor="@color/white"
                                android:textSize="20dp" />
                        </RelativeLayout>

                    </LinearLayout>

                   <LinearLayout
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       android:layout_weight="1"
                       >
                       <RelativeLayout
                           android:layout_width="match_parent"
                           android:layout_height="40dp"
                           android:layout_marginLeft="5dp"
                           android:id="@+id/profile_share_btn"
                           android:background="@drawable/rightredshape"
                           >
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_centerInParent="true"
                               android:text="Share"
                               android:textColor="@color/white"
                               android:fontFamily="@font/cantora_one"
                               android:textSize="20dp"
                               />

                       </RelativeLayout>

                   </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rel_layout"
                android:padding="10dp"
                android:id="@+id/qqq"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Topics Covered In This Project"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:layout_marginTop="30dp"
                    android:id="@+id/er"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:layout_centerHorizontal="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content"
                    android:text="Api Request with Retrofit \n Firebase Authentication \n Navigation Components \n Snackbar \n Recycler View \n Relative and Linear Layout"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:layout_below="@+id/er"
                    android:layout_marginTop="7dp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed-medium"
                    />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:id="@+id/sss"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="60dp"
                    >
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:src="@drawable/email"
                    android:background="?android:attr/selectableItemBackground"
                    android:id="@+id/about_mail"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_weight="1"
                    android:id="@+id/about_github"
                    android:src="@drawable/github"
                    />
                <ImageView
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_width="0dp"
                    android:id="@+id/about_linkedin"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:src="@drawable/linkedin"
                    />

            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>
</layout>